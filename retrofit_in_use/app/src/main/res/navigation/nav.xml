<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/pixabayFragment">

    <fragment
        android:id="@+id/pixabayFragment"
        android:name="com.dev.retrofit_in_use.ui.fragments.pixabay.PixabayFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_pixabay">

        <action
            android:id="@+id/action_pixabayFragment_to_detailsFragment"
            app:destination="@id/detailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_pixabayFragment_to_compareFragment"
            app:destination="@id/compareFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.dev.retrofit_in_use.ui.fragments.details.DetailsFragment"
        android:label="@string/details"
        tools:layout="@layout/fragment_details">

        <action
            android:id="@+id/action_detailsFragment_to_pixabayFragment"
            app:destination="@id/pixabayFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <argument
            android:name="currentImage"
            app:argType="com.dev.retrofit_in_use.models.Hit" />

    </fragment>
    <fragment
        android:id="@+id/compareFragment"
        android:name="com.dev.retrofit_in_use.ui.fragments.compare.CompareFragment"
        android:label="@string/compare"
        tools:layout="@layout/fragment_compare">
        <action
            android:id="@+id/action_compareFragment_to_pixabayFragment"
            app:destination="@id/pixabayFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

</navigation>